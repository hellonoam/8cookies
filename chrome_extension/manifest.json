{
	"name": "8cookies",

	"version": "0.2",

	"description": "saves your cookies and open windows in the cloud, so you can start your session on one computer and continue it from another",

	"background_page": "background.html",
	
	"permissions": [
	  "cookies",
	  "tabs",
	  "http://*/*",
	  "https://*/*",
	  "idle"
	],
	
	"icons": {"48": "icon48.png",
	          "128": "icon128.png" },
	
	"browser_action": {
	  "default_popup": "popup.html",
	  "default_icon": "icon48.png",
	  "default_title": "8cookies"
	}
}
