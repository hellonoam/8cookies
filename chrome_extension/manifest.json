{
	"name": "Browse from the cloud",

	"version": "1.1",

	"description": "Saves the browser information in the cloud, which allows users to browse from any computer",

	"background_page": "background.html",
	
	"permissions": [
	  "cookies",
	  "tabs",
	  "http://*/*",
	  "https://*/*",
	  "idle"
	],
	
	"icons": {"48": "icon48.png",
	          "128": "icon128.png" },
	
	"browser_action": {
	  "popup": "popup.html",
	  "default_icon": "icon48.png",
	  "default_title": "Browse from the cloud"
	},

	"update_url": "http://cloudbrowsing.appspot.com/updateInfo.xml"
}
